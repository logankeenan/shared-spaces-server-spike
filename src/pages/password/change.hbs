{{#> layout_page}}
    {{#*inline "page_content"}}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1>Change your Password</h1>
                    <form action="/password/change-save" method="post">
                        <input type="hidden" name="password_reset_token" value="{{form.password_reset_token}}">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control"
                                   value="{{form.password}}" name="password"
                                   id="password"/>
                            <small class="form-text text-muted">Must be at least 8 characters</small>
                            {{#if errors.password}}
                                <div class="invalid-feedback d-block">{{errors.password}}</div>
                            {{/if}}
                        </div>

                        <div class="form-group">
                            <label for="confirm_password">Confirm Password</label>
                            <input type="password" class="form-control"
                                   value="{{form.confirm_password}}"
                                   name="confirm_password" id="confirm_password"/>

                            {{#if errors.confirm_password}}
                                <div class="invalid-feedback d-block">{{errors.confirm_password}}</div>
                            {{/if}}
                        </div>
                        <button id="primary-form-submit" type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    {{/inline}}
{{/layout_page}}
