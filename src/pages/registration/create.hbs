{{#> layout_page}}
    {{#*inline "page_content"}}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1>Create Account</h1>
                    <form action="/registration/save" method="post">
                        <div class="form-group">
                            <label for="first_name">First name</label>
                            <input type="text" class="form-control" value="{{form.first_name}}"
                                   name="first_name" id="first_name"/>
                            {{#if errors.first_name}}
                                <div class="invalid-feedback d-block">{{errors.first_name}}</div>
                            {{/if}}
                        </div>
                        <div class="form-group">
                            <label for="last_name">Last name</label>
                            <input type="text" class="form-control" value="{{form.last_name}}"
                                   name="last_name" id="last_name"/>
                            {{#if errors.last_name}}
                                <div class="invalid-feedback d-block">{{errors.last_name}}</div>
                            {{/if}}
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" value="{{form.email}}"
                                   name="email"
                                   id="email"/>
                            {{#if errors.email}}
                                <div class="invalid-feedback d-block">{{errors.email}}</div>
                            {{/if}}
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input minlength="8" type="password" class="form-control"
                                   value="{{form.password}}" name="password"
                                   id="password"/>
                            <small class="form-text text-muted">Must be at least 8 characters</small>
                            {{#if errors.password}}
                                <div class="invalid-feedback d-block">{{errors.password}}</div>
                            {{/if}}
                        </div>

                        <div class="form-group">
                            <label for="confirm_password">Confirm password</label>
                            <input minlength="8" type="password" class="form-control"
                                   value="{{form.confirm_password}}"
                                   name="confirm_password" id="confirm_password"/>
                            {{#if errors.confirm_password}}
                                <div class="invalid-feedback d-block">{{errors.confirm_password}}</div>
                            {{/if}}
                        </div>
                        <button id="primary-form-submit" type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    {{/inline}}
{{/layout_page}}
