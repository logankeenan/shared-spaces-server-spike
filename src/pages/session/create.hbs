{{#> layout_page}}
    {{#*inline "page_content"}}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <h1>Login</h1>
                    <form action="/session/save" method="post">
                        {{#if errors.form}}
                            <div class="alert alert-danger" role="alert">
                                {{errors.form}}
                            </div>
                        {{/if}}
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" value="{{form.email}}"
                                   name="email"
                                   id="email"/>
                            {{#if errors.email}}
                                <div class="invalid-feedback d-block">{{errors.email}}</div>
                            {{/if}}
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" value="{{form.password}}"
                                   name="password"
                                   id="password"/>
                            {{#if errors.password}}
                                <div class="invalid-feedback d-block">{{errors.password}}</div>
                            {{/if}}
                        </div>
                        <button id="primary-form-submit" type="submit" class="btn btn-primary">Submit</button>
                    </form>

                    <ul class="list-unstyled mt-4">
                        <li>
                            <a href="/password/reset">Forgot Password?</a>
                        </li>
                        <li>
                            <a href="/registration/confirmation-create">Resend Confirmation Email</a>
                        </li>
                    </ul>
                </div>
            </div>


        </div>
    {{/inline}}
{{/layout_page}}
